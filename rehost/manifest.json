{
  "manifest_version": 3,
  "name": "Rehost",
  "description": "Réhébergez facilement des images vers votre service d'hébergement d'images préféré.",
  "homepage_url": "https://github.com/XaaT/rehost-chrome",
  "version": "0.8.0",
  "default_locale": "en",
  "permissions": [
    "clipboardWrite",
    "notifications",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"  
  ],
  "icons": {
    "16": "images/rehost.svg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "images/rehost.svg",
    "default_title": "Rehost - Réhébergez facilement des images",
    "default_popup": "popup/popup.html"
  }
}
